# Production environment - copy to .env.production and set real values
# Do not commit .env.production with real secrets. Use CI/secrets manager for JWT_SECRET and FIREBASE.

DATABASE_URL=postgresql://bibleuser:REPLACE_WITH_POSTGRES_PASSWORD@postgres:5432/bibleapp
MONGODB_URL=mongodb://mongo:27017/bibleapp
REDIS_URL=redis://redis:6379
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET
FIREBASE_CREDENTIALS_PATH=serviceAccountKey.json
DEBUG=false
